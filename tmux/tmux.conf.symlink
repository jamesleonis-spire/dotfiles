set-option -g prefix `
# set-option - prefix C-a

# I need VIM to respond faster.
set -s escape-time 0

unbind-key C-b
bind-key C-a last-window
bind-key ` last-window
bind-key a send-prefix

set -g base-index 1

set -g mode-mouse on
set -g mouse-resize-pane on
set -g mouse-select-pane on
set -g mouse-select-window on
