[color]
	ui = true
[user]
	name = James Leonis
	email = me@jamesleonis.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = less
	autocrlf = input
[alias]
	timeline = log --decorate --oneline --graph
	ap = add --patch
[push]
	default = current
[diff]
	tool = vimdiff
	algorithm = histogram
[merge]
	tool = vimdiff
	conflictstyle = diff3
