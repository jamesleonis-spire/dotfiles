[color]
	ui = true
[user]
	name = James Leonis
	email = me@jamesleonis.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = less
[alias]
	timeline = log --decorate --oneline --graph
	diffp = diff --patience
	ap = add --patch
[push]
	default = current
[diff]
	tool = vimdiff
	algorithm = patience
[merge]
	tool = vimdiff
	conflictstyle = diff3
